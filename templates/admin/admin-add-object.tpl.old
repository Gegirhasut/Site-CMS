<html>
<head>
    <script>
     {if isset($post)}
      window.close();
     {/if}
    </script>
    <script type="text/javascript" src="/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="/js/jquery-1.3.2.min.js"></script>
</head>
<body>
	<table>
	 <tr>
	  <td valign="top">
	    <form action="" method="post">
	        <table>
	            {foreach from=$fields.fields item=field key=name}
	                {if $name neq $fields.identity}
	                    <tr>
	                        {if $field.type neq 'link'}
	                            <td>{$field.title}</td>
	                            <td>
	                                {if $field.type eq "select"}
	                                    <select name="{$name}" id="{$name}">
	                                        {if isset($field.empty)}
	                                            <option value=""></option>
	                                        {/if}
	                                        {foreach from=$field.values item=option}
	                                            <option value="{$option[$field.select_identity]|escape}" {if $select eq $option[$field.select_identity]}selected{/if}>{$option.name}</option>
	                                        {/foreach}
	                                    </select>
	                                {elseif $field.type eq "textarea"}
	                                    <textarea id="{$name}" name="{$name}"  {if isset($field.rows)}rows="{$field.rows}"{else}rows="5"{/if} {if isset($field.cols)}cols="{$field.cols}"{else}cols="25"{/if}></textarea>
	                                {elseif $field.type eq "img"}
									 	<div id="{$fields.img.field}">не загружена</div>
	                                {elseif $field.type eq "word"}
	                                    <textarea id="{$name}" name="{$name}"></textarea>
	                                    <script type="text/javascript">
	                                        var editor{$name} = CKEDITOR.replace( '{$name}' );
	                                    </script>
	                                {else}
	                                    <input id="{$name}" type="{$field.type}" name="{$name}" size="30" />
	                                {/if}
	                            </td>
	                        {/if}
	                    </tr>
	                {/if}
	            {/foreach}
	            <tr>
	                <td colspan="2">
	                    <input type="hidden" name="operation" value="add" />
	                    <input id="submit" type="submit" value=" Добавить " />
	                    
	                    <input type="button" value=" Отмена " onclick="window.close();" />
	                </td>
	            </tr>
	        </table>
	    </form>
	   </td>
	   {if isset ($fields.img)}
    	   <td valign="top">
    	     {include file="units/uploadfile.tpl"}
    	   </td>
	   {/if}
	  </tr>
	 </table>
</body>
</html>